<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="InterfaceBackground">
        <item name="android:background">@color/colorInterfaceBackground</item>
    </style>
    
    <style name="RadioBtn">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="mineImg">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>
    <style name="mineTv">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#252524</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@mipmap/ahlib_right_arrow</item>
    </style>
    <style name="mineLine">
        <item name="android:background">#817c7c</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="mineShareBtn">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableLeft">@mipmap/abc_ic_menu_share_mtrl_alpha</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/mine_share_btn_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/nameText</item>
    </style>
    <style name="userNameAnd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="dialogLoading">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="ivDailyListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>
    <style name="tvDailyListTitle">
        <item name="android:textColor">@color/nameText</item>
        <item name="android:background">@drawable/daily_title</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">260dp</item>
    </style>
    <style name="llDaily">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="likeDaily">
        <item name="android:button">@null</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="photoDaily">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="nameDaily">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="identityDaily">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#b5b5b5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="llDailyText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="moreTitleImg">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="dailyHeaders">
        <item name="android:textColor">@color/colorShareBtnBgS</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="settingTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nameText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/discover_item_bg</item>
    </style>
    <style name="personalData">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="personalDatall">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/setting_view_border_bg</item>
    </style>
    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="scanBtn">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/scan_btn_bg</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="titleSetPicsize">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/iconDis</item>
        <item name="android:background">@mipmap/me_setting</item>
    </style>

    <style name="dialogLoginText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="dialogExitLogin">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/settingTitle</item>
    </style>
    <style name="userFeedbackPhoneLl">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="userFeedbackPhoneTv">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="userFeedbackPhoneBtn">
        <item name="android:background">@drawable/setting_user_feedback_edittext</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>

