<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="InterfaceBackground">
        <item name="android:background">@color/colorInterfaceBackground</item>
    </style>
    
    <style name="RadioBtn">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="mineImg">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>
    <style name="mineTv">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#252524</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@mipmap/ahlib_right_arrow</item>
    </style>
    <style name="mineLine">
        <item name="android:background">#817c7c</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="mineShareBtn">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableLeft">@mipmap/abc_ic_menu_share_mtrl_alpha</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/mine_share_btn_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/nameText</item>
    </style>
    <style name="userNameAnd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="ivDailyListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>
    <style name="tvDailyListTitle.">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">270dp</item>
    </style>
    <style name="llDaily">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="likeDaily">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="photoDaily">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="nameDaily">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="identityDaily">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="llDailyText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>
