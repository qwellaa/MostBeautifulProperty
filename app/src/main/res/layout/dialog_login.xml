<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black_deep"
        android:text="快捷登录"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_login_sina"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/share_sina_normal"/>
            <TextView
                style="@style/dialogLoginText"
                android:text="@string/ssdk_sinaweibo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_login_qq"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/share_qq_normal"/>
            <TextView
                style="@style/dialogLoginText"
                android:text="@string/ssdk_qq"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_login_weixin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/share_weixin_normal"/>
            <TextView
                style="@style/dialogLoginText"
                android:text="@string/weixin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_login_exit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/share_copylink"/>
            <TextView
                style="@style/dialogLoginText"
                android:text="退出登录"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>