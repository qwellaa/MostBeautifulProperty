<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/custom_title_setting"
             android:id="@+id/include_title_setting"/>
    <com.lanou3g.mostbeautifulproperty.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_setting_personal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingPersonalData"
                    style="@style/personalData"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/circleImageView"/>

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingAlerts"
                    style="@style/personalData"/>
                <Switch
                    android:id="@+id/switch_setting_alerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingClearCache"
                    style="@style/personalData"/>
                <TextView
                    android:id="@+id/tv_setting_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0M"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting_user_feedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingUserFeedback"
                    style="@style/personalData"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting_give_praise"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingGivePraise"
                    style="@style/personalData"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting_recommend_friend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingRecommendFriend"
                    style="@style/personalData"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting_about_us"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingAboutUs"
                    style="@style/personalData"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setting_start_video"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingStartVideo"
                    style="@style/personalData"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_setting_exit_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/personalDatall">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/settingExitLogin"
                    style="@style/personalData"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ahlib_right_arrow"/>
            </LinearLayout>
        </LinearLayout>
    </com.lanou3g.mostbeautifulproperty.view.BounceScrollView>
</LinearLayout>