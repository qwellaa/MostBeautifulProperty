<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/top_bar_normal_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <LinearLayout
        android:layout_below="@+id/iv_discover_list_title"
        style="@style/llDaily"
        android:background="@color/discover_item_bg"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_discover">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_discover_list_photo"
            style="@style/photoDaily"
            />
        <LinearLayout
            android:orientation="vertical"
            style="@style/llDailyText">
            <TextView
                android:id="@+id/tv_discover_list_name"
                android:text="Amanda Thomas"
                style="@style/nameDaily"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_discover_list_identity"
                android:text="luv AJ 创始人"
                style="@style/identityDaily"
                />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/iv_daily_list_dislike"
                android:background="@drawable/radio_btn_dislike"
                style="@style/likeDaily"/>
            <RadioButton
                android:id="@+id/iv_daily_list_like"
                android:background="@drawable/radio_btn_like"
                style="@style/likeDaily"/>
        </RadioGroup>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_discover_list_title"
        android:scaleType="fitXY"
        style="@style/ivDailyListTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tv_discover_list_title"
        android:text="luv AJ丨菱形水晶手背链"
        style="@style/tvDailyListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>